{
    "battery": {
        "format": "{icon}   {capacity}%",
        "format-alt": "{icon}   {time}",
        "format-charging": " {capacity}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "format-plugged": "  {capacity}% ",
        "states": {
            "critical": 15,
            "good": 95,
            "warning": 30
        }
    },
    "cpu": {
        "format": "󰻠 {usage}%",
        "format-alt": "󰻠 {avg_frequency} GHz",
        "interval": 1
    },
    "memory": {
        "format": "󰍛 {}%",
        "format-alt": "󰍛 {used}/{total} GiB",
        "interval": 5
    },
    "group/system": {
        "orientation": "horizontal",
        "transition-duration": 300,
        "drawer": {
            "transition-left-to-right": "false",
            "transition-duration": 300
        },
        "modules": [
            "battery",
            "cpu",
            "memory"
        ]
    },
    "hyprland/window": {
            "rewrite": {
                "(.*) - Firefox": "$1",
                "(.*) - kitty": "[$1]"
            },
            "separate-outputs": true
        },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "󰂚<span foreground='red'><sup></sup></span>",
            "none": "󰂚",
            "dnd-notification": "<span foreground='red'><sup></sup></span>",
            "dnd-none": "",
            "inhibited-notification": "<span foreground='red'><sup></sup></span>",
            "inhibited-none": "󰂚",
            "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
            "dnd-inhibited-none": ""
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/randpaper": {
            "on-click": "export SWWW_TRANSITION_POS=$(hyprctl cursorpos) && hywal $(find $HOME/Pictures/Wallpapers/favorites | sort -R |  tail -n 1)",
            "format": " 󰏘 ",
           	"tooltip": "false"
        },
    "clock": {
        "format": " {:%H:%M}",
        "format-alt": " {:%a %d %b %H:%M}",
        "tooltip": "true",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "network": {
        "on-click": "foot -e nmtui",
        "format-disconnected": "󰖪 0% ",
        "format-ethernet": "󰈀 100% ",
        "format-linked": "{ifname} (No IP)",
        "format-wifi": "  {signalStrength}%",
        "tooltip-format": "Connected to {essid} {ifname} via {gwaddr}"
    },
    "position": "top",
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-icons": {
            "default": [
                "󰕿",
                "󰖀",
                "󰕾"
            ]
        },
        "format-muted": "󰝟",
        "on-click": "pavucontrol",
        "scroll-step": 5
    },
    "group/settings": {
        "orientation": "horizontal",
        "drawer": {
            "transition-left-to-right": "false",
            "transition-duration": 300
        },
        "modules": [
            "pulseaudio",
            "network"
        ]
    },
    "tray": {
        "icon-size": 20,
        "spacing": 8
    },
    "mpris": {
        "format": "{player} • {player_icon} {dynamic}",
        "format-paused": "{player} • {status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "",
        },
        "status-icons": {
            "paused": ""
        },
        "max-length": 60,
        "interval": 1
    },
    "custom/pomodoro": {
    	"format": "{}",
    	"exec": "tomato -t",
    	"interval": 1
    },
    "mpd": {
        "format": "MPD • {stateIcon}{consumeIcon} {randomIcon} {repeatIcon} {singleIcon} {artist}  {title}  {album} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ",
        "format-disconnected": "MPD • Disconnected ",
        "format-stopped": "MPD • {consumeIcon} {randomIcon} {repeatIcon}{ singleIcon} Stopped ",
        "interval": 1,
        "consume-icons": {
            "on": " 󰲸 "
        },
        "random-icons": {
            "off": "",
            "on": ""
        },
        "repeat-icons": {
            "on": " "
        },
        "single-icons": {
            "on": "1 "
        },
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "max-length": 60
    },
    "group/media": {
        "orientation": "horizontal",
        "modules": [
            "mpris",
            "mpd"
        ]
    },
    "wlr/workspaces": {
        "active-only": false,
        "all-outputs": false,
        "disable-scroll": false,
        "format": "{name}",
        "format-icons": {
            "active": "",
            "default": "",
            "sort-by-number": true,
            "urgent": ""
        },
        "on-click": "activate",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "on-scroll-up": "hyprctl dispatch workspace e-1"
    },
    "group/general": {
        "orientation": "horizontal",
        "modules": [
            "group/system",
            "group/settings",
            "custom/notification"
        ]
    }
}
